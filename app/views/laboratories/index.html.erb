<p id="notice"><%= notice %></p>

<h1>Laboratories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laboratories.each do |laboratory| %>
      <tr>
        <td><%= laboratory.name %></td>
        <td><%= Department.find(laboratory.department_id).name %></td>
        <% if laboratory.user_id != nil %>
          <td><%= Laboratory.find(laboratory.user_id).name %></td>
        <% else %>
          <td>Usuário não definido</td>
        <% end %>
        <td><%= link_to 'Show', laboratory %></td>
        <td><%= link_to 'Edit', edit_laboratory_path(laboratory) %></td>
        <td><%= link_to 'Destroy', laboratory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

